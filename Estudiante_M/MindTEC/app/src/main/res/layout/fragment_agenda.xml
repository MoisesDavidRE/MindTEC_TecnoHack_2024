            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_agenda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
