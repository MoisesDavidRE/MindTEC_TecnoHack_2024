<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"> <!-- Permite que el contenido se ajuste al tamaño de la pantalla -->

        <!-- Contenedor para todos los elementos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowSpan="1"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_background"
                    android:radius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/estres" />

                        <TextView
                            android:id="@+id/nivel_estres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nivel de Estrés"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_bar_style"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/progreso_estres"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:background="@color/amarillo" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/valor_estres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textColor="#0D9247"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="El nivel de estrés puede indicar sobrecarga mental."
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowSpan="1"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_background"
                    android:radius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/cardiaco" />

                        <TextView
                            android:id="@+id/ritmo_cardiaco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ritmo Cardíaco"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_bar_style"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/progreso_cardiaco"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.85"
                                android:background="@color/verde" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/valor_cardiaco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85 bpm"
                            android:textColor="#FF9800"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Un ritmo cardíaco saludable está entre 60-100 bpm."
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowSpan="1"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_background"
                    android:radius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/oxigenacion" />

                        <TextView
                            android:id="@+id/nivel_oxigeno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oxigenación"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_bar_style"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/progreso_oxigeno"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.90"
                                android:background="@color/verde" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/valor_oxigeno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90%"
                            android:textColor="#FF9800"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Un nivel de oxígeno por debajo de 90% es preocupante."
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowSpan="1"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_background"
                    android:radius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ciclo" />

                        <TextView
                            android:id="@+id/nivel_sueno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ciclo de Sueño"
                            android:textColor="#333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@drawable/progress_bar_style"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/progreso_sueno"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.65"
                                android:background="@color/naranja" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/valor_sueno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 horas"
                            android:textColor="#0D9247"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Un sueño reparador debe ser de 7-9 horas. Cuida tu sueño."
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/card_background"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Nivel de Estrés Durante la Semana"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Este gráfico muestra el nivel de estrés registrado a lo largo de la semana. Los valores reflejan los porcentajes del nivel de estrés, donde 100% indica el mayor nivel de estrés."
                        android:textColor="#666"
                        android:textSize="14sp" />

                    <com.example.mindtec.EstadisticaGraphView
                        android:id="@+id/estadistica_graph"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
